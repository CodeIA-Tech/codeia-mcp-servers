{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${PROJECT_ROOT}"
      ],
      "description": "Acesso ao sistema de arquivos do projeto"
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository",
        "${PROJECT_ROOT}"
      ],
      "description": "Operações Git e análise de repositório"
    }
  }
}

